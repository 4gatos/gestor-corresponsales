button, .btn {
    display: inline-block;
    border: none;
    padding: 0.6rem 1.5rem;
    margin: 0;
    text-decoration: none;
    background: #0069ed;
    color: #ffffff;
    font-family: sans-serif;
    font-size: 1rem;
    cursor: pointer;
    text-align: center;
    transition: background 250ms ease-in-out, 
                transform 150ms ease;
    -webkit-appearance: none;
    -moz-appearance: none;
}

button:hover,
.btn:hover,
.btn:focus
button:focus {
    background: #387ca3;
}

button:focus, .btn:focus {
    outline: none;
}

button:active, .btn:active {
    transform: scale(0.99);
}

.btn-primary
  background $primary
  margin-top $defaultSize * 2

.btn-img
  width 100px
  height 100px
  display flex
  align-items center
  justify-content center
  background-color transparent
  border 1px dashed $greyList
  color $greyList
  margin 8px

  &:hover
    border-color $greyBorder
    color $greyBorder
    background-color transparent