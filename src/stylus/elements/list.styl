.list
  margin-top $defaultSize * 2
  .list-item
    background-color $white
    padding $defaultSize * 2
    display flex
    align-items center
    justify-content space-between
    color $greyText

    .item-info
      display flex
      align-items center
      font-weight 700

      .item-img
        height 45px
        width 45px
        overflow hidden
        border-radius 23px;
        margin-right $defaultSize

      img
        width 100%